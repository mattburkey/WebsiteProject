<%- include('../partials/header.ejs')%>
<div class = "content">
    <h2>Welcome, <%=user.firstName%></h2>
    <%if(connections.length) {%>
        <p>You have created the following connections</p>
        <%connections.forEach(connection => {%>
            <a href = '/connections/<%= connection.id%>'><p><%=connection.name%></p></a>

        <%});
    } else {%>
        <p>You have not created any connections</p>
    <%}%>

    <%if(rsvps.length) {%>
        <p>You have RSVP'd the following events:</p>
        <%rsvps.forEach(rsvp => {%>
            <p><b>Event name:</b> <%=rsvp.connection.name%> <b>RSVP Status:</b> <%=rsvp.rsvp%> </p>
            <form class="buttons">
                <button formmethod="POST" formaction="/connections/<%=rsvp.connection._id%>/rsvp?_method=DELETE">Delete</button>
            </form>
        <%});
    } else {%>
        <p>You have not RSVP'd any events</p>
    <%}%>
</div>
    <%- include('../partials/footer.ejs')%>
